<Window x:Class="ModernWpf_ContentDialog_Issue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernWpf_ContentDialog_Issue"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" 
        Width="800"        
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <ui:SimpleStackPanel Margin="12" Spacing="24">
            <TextBlock Text="My first ModernWPF app" Style="{StaticResource HeaderTextBlockStyle}" />
            <Button Content="Start New Window" Click="Button_Click_1"/>
            <Button Content="Open ContentDialog From Code behind" Style="{StaticResource AccentButtonStyle}" Click="Button_Click" />
        </ui:SimpleStackPanel>
    </Grid>
</Window>
